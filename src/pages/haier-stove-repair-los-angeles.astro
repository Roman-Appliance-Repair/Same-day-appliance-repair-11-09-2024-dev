---
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/navbar/navbar.astro";
import Reviews from "@components/reviews.astro";
import Contactbtn from "@components/contactbtn.astro";
import Btn from "@components/btn.astro";
import { Accordion, AccordionItem,Icon } from 'free-astro-components'

import "css/brands/style-brands.css";

const description = "Same Day Appliance Repair offers expert Haier stove repair in Los Angeles, Pasadena, Santa Monica, Glendale, Burbank, Irvine, Anaheim, and nearby areas. Factory-trained technicians, OEM Haier parts, 90-day warranty, and same-day service for gas, electric, induction, and dual-fuel stoves. Call today!";
const title = "Haier Stove Repair LA | Same Day Service";
---
<Layout title={title} description={description}>
  <head>
    <script type="application/ld+json" is:raw>
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "serviceType": "Haier Stove Repair",
        "provider": {
          "@type": "Organization",
          "name": "Same Day Appliance Repair",
          "url": "https://samedayappliance.repair/",
          "logo": "https://samedayappliance.repair/images/same-day-appliance-repair-logo.webp",
          "telephone": "+13238704790",
          "email": "info@samedayappliance.repair",
          "areaServed": [
            { "@type": "Place", "name": "Los Angeles County" },
            { "@type": "Place", "name": "Orange County" },
            { "@type": "Place", "name": "Ventura County" }
          ]
        },
        "description": "Same Day Appliance Repair provides expert Haier stove repair services with OEM parts and same-day availability across Los Angeles, Orange County, and Ventura County.",
        "mainEntityOfPage": "https://samedayappliance.repair/haier-stove-repair-los-angeles/",
        "offers": {
          "@type": "Offer",
          "description": "Professional Haier stove repair services",
          "priceRange": "$$",
          "availability": "https://schema.org/InStock"
        },
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Haier Stove Repair Services",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Gas Haier Stove Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service", 
                "name": "Electric Haier Stove Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Dual-Fuel Haier Range Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Haier Induction Cooktop Repair"
              }
            }
          ]
        },
        "keywords": "Haier range repair, Haier cooktop repair Los Angeles, Haier gas stove repair, Haier electric stove repair, Haier induction cooktop repair, OEM Haier stove parts, Haier appliance service near me, same day Haier stove repair"
