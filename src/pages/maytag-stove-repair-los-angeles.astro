<Layout title={title} description={description}>
  <head>
    <script type="application/ld+json" is:raw>
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "serviceType": "Maytag Stove Repair",
        "provider": {
          "@type": "Organization",
          "name": "Same Day Appliance Repair",
          "url": "https://samedayappliance.repair/",
          "logo": "https://samedayappliance.repair/images/same-day-appliance-repair-logo.webp",
          "telephone": "+13238704790",
          "email": "info@samedayappliance.repair",
          "areaServed": [
            { "@type": "Place", "name": "Los Angeles County" },
            { "@type": "Place", "name": "Orange County" },
            { "@type": "Place", "name": "Ventura County" }
          ]
        },
        "description": "Same Day Appliance Repair provides expert Maytag stove repair services with OEM parts and same-day availability across Los Angeles, Orange County, and Ventura County.",
        "mainEntityOfPage": "https://samedayappliance.repair/maytag-stove-repair-los-angeles/",
        "offers": {
          "@type": "Offer",
          "description": "Professional Maytag stove repair services",
          "priceRange": "$$",
          "availability": "https://schema.org/InStock"
        },
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Maytag Stove Repair Services",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Gas Maytag Stove Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service", 
                "name": "Electric Maytag Stove Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Dual-Fuel Maytag Range Repair"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Maytag Induction Cooktop Repair"
              }
            }
          ]
        },
        "keywords": "Maytag range repair, Maytag cooktop repair Los Angeles, Maytag gas stove repair, Maytag electric stove repair, Maytag induction cooktop repair, OEM Maytag stove parts, Maytag appliance service near me, same day Maytag stove repair"
      }
