---
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/navbar/navbar.astro";
import Reviews from "@components/reviews.astro";
import Contactbtn from "@components/contactbtn.astro";
import Btn from "@components/btn.astro";
import { Accordion, AccordionItem,Icon } from 'free-astro-components'

import "css/brands/style-brands.css";

const description = "Same Day Appliance Repair offers expert Wolf stove repair in Los Angeles, Pasadena, Santa Monica, Glendale, Burbank, Irvine, Anaheim, and nearby areas. Factory-trained technicians, OEM Wolf parts, 90-day warranty, and same-day service for gas, electric, induction, and dual-fuel stoves. Call today!";
const title ="Same Day Wolf Stove Repair in Los Angeles | Factory-Trained Techs & OEM Parts";
