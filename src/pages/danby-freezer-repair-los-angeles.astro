      {
        "@context": "https://schema.org",
        "@type": "Service",
        "serviceType": "Danby Freezer Repair",
        "provider": {
          "@type": "Organization",
          "name": "Same Day Appliance Repair",
          "url": "https://samedayappliance.repair/",
          "logo": "https://samedayappliance.repair/images/same-day-appliance-repair-logo.webp",
          "telephone": "+13238704790",
          "email": "info@samedayappliance.repair",
          "areaServed": [
            { "@type": "Place", "name": "Los Angeles County" },
            { "@type": "Place", "name": "Orange County" },
            { "@type": "Place", "name": "Ventura County" }
          ]
        },
        "description": "Same Day Appliance Repair provides expert Danby freezer repair services with OEM parts and same-day availability across Los Angeles, Orange County, and Ventura County.",
        "mainEntityOfPage": "https://samedayappliance.repair/danby-freezer-repair-los-angeles/"
