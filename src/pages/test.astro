---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Same Day Appliance Repair - (323) 870-4790 - Best in LA" description="Need Same Day appliance repair? We provide fast and reliable service. We are licensed and warrantied. Don't wait! Call: (323) 870-4790">
    <style>
        body {
          margin: 0;
          font-family: Arial, sans-serif;
        }
    
        .container {
          display: flex;
          height: 100vh;
        }
    
        /* Левая колонка с опциями */
        .options {
          width: 33.33%;
          background-color: #003366;
          color: white;
          display: flex;
          flex-direction: column;
          padding: 1rem;
          box-sizing: border-box;
        }
    
        .options label {
          font-size: 1.2rem;
          margin: 0.5rem 0;
          padding: 0.5rem;
          cursor: pointer;
          display: block;
        }
    
        .options input {
          display: none;
        }
    
        /* Правая колонка с контентом */
        .content-container {
          width: 66.67%;
          background-color: #e6e6e6;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
          padding: 2rem;
          box-sizing: border-box;
        }
    
        .content {
          display: none;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
        }
    
        .content img {
          max-width: 100%;
          height: auto;
          margin-bottom: 1rem;
        }
    
        .content p {
          font-size: 1rem;
          color: #333;
        }
    
        /* Отображение контента для десктопной версии */
        #option1:checked ~ .content-container #content1,
        #option2:checked ~ .content-container #content2,
        #option3:checked ~ .content-container #content3,
        #option4:checked ~ .content-container #content4,
        #option5:checked ~ .content-container #content5 {
          display: flex;
        }
    
        /* Отображение контента для мобильной версии */
        #option1:checked + label + .mobile-content,
        #option2:checked + label + .mobile-content,
        #option3:checked + label + .mobile-content,
        #option4:checked + label + .mobile-content,
        #option5:checked + label + .mobile-content {
          display: flex;
        }
    
        .mobile-content {
          display: none;
          background-color: #e6e6e6;
          margin: 0.5rem 0;
          padding: 1rem;
          box-sizing: border-box;
        }
    
        .mobile-content img {
          max-width: 100%;
          height: auto;
          margin-bottom: 1rem;
        }
    
        .mobile-content p {
          font-size: 1rem;
          color: #333;
        }
    
        /* Мобильная версия */
        @media (max-width: 768px) {
          .container {
            flex-direction: column;
            height: auto;
          }
    
          .options {
            width: 100%;
          }
    
          .content-container {
            display: none; /* Скрываем правую колонку */
          }
    
          .options label::after {
            content: '+';
            float: right;
          }
    
          .options input:checked + label::after {
            content: '-';
          }
        }
      </style>
  <div class="container">
    <!-- Опции -->
    <div class="options">
      <input type="radio" id="option1" name="options" checked>
      <label for="option1">Option 1</label>
      <div class="mobile-content">
        <img src="https://via.placeholder.com/600x400" alt="Image 1">
        <p>Content for Option 1.</p>
      </div>

      <input type="radio" id="option2" name="options">
      <label for="option2">Option 2</label>
      <div class="mobile-content">
        <img src="https://via.placeholder.com/600x400" alt="Image 2">
        <p>Content for Option 2.</p>
      </div>

      <input type="radio" id="option3" name="options">
      <label for="option3">Option 3</label>
      <div class="mobile-content">
        <img src="https://via.placeholder.com/600x400" alt="Image 3">
        <p>Content for Option 3.</p>
      </div>

      <input type="radio" id="option4" name="options">
      <label for="option4">Option 4</label>
      <div class="mobile-content">
        <img src="https://via.placeholder.com/600x400" alt="Image 4">
        <p>Content for Option 4.</p>
      </div>

      <input type="radio" id="option5" name="options">
      <label for="option5">Option 5</label>
      <div class="mobile-content">
        <img src="https://via.placeholder.com/600x400" alt="Image 5">
        <p>Content for Option 5.</p>
      </div>
    </div>

    <!-- Контент для десктопной версии -->
    <div class="content-container">
      <div id="content1" class="content">
        <img src="https://via.placeholder.com/600x400" alt="Image 1">
        <p>Content for Option 1.</p>
      </div>
      <div id="content2" class="content">
        <img src="https://via.placeholder.com/600x400" alt="Image 2">
        <p>Content for Option 2.</p>
      </div>
      <div id="content3" class="content">
        <img src="https://via.placeholder.com/600x400" alt="Image 3">
        <p>Content for Option 3.</p>
      </div>
      <div id="content4" class="content">
        <img src="https://via.placeholder.com/600x400" alt="Image 4">
        <p>Content for Option 4.</p>
      </div>
      <div id="content5" class="content">
        <img src="https://via.placeholder.com/600x400" alt="Image 5">
        <p>Content for Option 5.</p>
      </div>
    </div>
  </div>
</Layout>
