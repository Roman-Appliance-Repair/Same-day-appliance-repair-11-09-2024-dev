---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Same Day Appliance Repair - (323) 870-4790 - Best in LA" description="Need Same Day appliance repair? We provide fast and reliable service. We are licensed and warrantied. Don't wait! Call: (323) 870-4790">
    <style>
        body {
          margin: 0;
          font-family: Arial, sans-serif;
        }
    
        .container {
          display: flex;
          height: 100vh;
        }
    
        /* Левая колонка с опциями */
        .options {
          width: 33.33%;
          background-color: #003366;
          color: white;
          display: flex;
          flex-direction: column;
          justify-content: center;
          padding: 1rem;
          box-sizing: border-box;
        }
    
        .options label {
          font-size: 1.2rem;
          margin: 0.5rem 0;
          padding: 0.5rem;
          cursor: pointer;
          text-align: center;
          display: block;
          background-color: transparent;
          border-radius: 5px;
          transition: background-color 0.3s, color 0.3s;
        }
    
        .options input {
          display: none;
        }
    
        /* Подсветка активной опции */
        .options input:checked + label {
          background-color: #1e90ff;
          color: white;
        }
    
        /* Правая колонка с фото */
        .content-container {
          width: 66.67%;
          background-color: #e6e6e6;
          display: flex;
          justify-content: center;
          align-items: center;
          text-align: center;
        }
    
        .content {
          display: none;
        }
    
        .content img {
          max-width: 100%;
          height: auto;
        }
    
        /* Отображение фото при выборе опции */
        #option1:checked ~ .content-container .content1,
        #option2:checked ~ .content-container .content2 {
          display: block;
        }
      </style>
     
      <div class="container">
        <!-- Левая колонка с опциями -->
        <div class="options">
          <input type="radio" id="option1" name="options" checked>
          <label for="option1">Option 1</label>
    
          <input type="radio" id="option2" name="options">
          <label for="option2">Option 2</label>
        </div>
    
        <!-- Правая колонка с фото -->
        <div class="content-container">
          <div class="content content1">
            <img src="https://via.placeholder.com/600x400" alt="Image 1">
          </div>
          <div class="content content2">
            <img src="https://via.placeholder.com/600x400" alt="Image 2">
          </div>
        </div>
      </div>
</Layout>
