---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Same Day Appliance Repair - (323) 870-4790 - Best in LA" description="Need Same Day appliance repair? We provide fast and reliable service. We are licensed and warrantied. Don't wait! Call: (323) 870-4790">
    <style>
        body {
          margin: 0;
          font-family: Arial, sans-serif;
          display: flex;
          height: 100vh;
        }
    
        .tab {
          display: flex;
          flex-direction: row;
          width: 100%;
        }
    
        /* Левая колонка с вкладками */
        .tab-menu {
          width: 30%;
          background-color: #003366;
          color: white;
          display: flex;
          flex-direction: column;
          padding: 1rem;
          box-sizing: border-box;
        }
    
        .tab-menu input[type="radio"] {
          display: none;
        }
    
        .tab-menu label {
          font-size: 1.2rem;
          padding: 0.8rem;
          margin: 0.5rem 0;
          cursor: pointer;
          text-align: center;
          display: block;
          background-color: transparent;
          border-radius: 5px;
          transition: background-color 0.3s, color 0.3s;
        }
    
        .tab-menu input[type="radio"]:checked + label {
          background-color: #1e90ff;
          color: white;
        }
    
        /* Правая колонка с содержимым */
        .tab-content-container {
          width: 70%;
          padding: 2rem;
          background-color: white;
          box-sizing: border-box;
          display: flex;
          justify-content: center;
          align-items: center;
          text-align: center;
        }
    
        .tab-content {
          display: none;
          font-size: 1.5rem;
          color: black;
        }
    
        /* Отображение активного содержимого */
        #tab-btn-1:checked ~ .tab-content-container #content-1,
        #tab-btn-2:checked ~ .tab-content-container #content-2,
        #tab-btn-3:checked ~ .tab-content-container #content-3 {
          display: block;
        }
      </style>
    </head>
    
    <body>
      <div class="tab">
        <!-- Левая колонка с вкладками -->
        <div class="tab-menu">
          <input checked id="tab-btn-1" name="tab-btn" type="radio">
          <label for="tab-btn-1">Вкладка 1</label>
          <input id="tab-btn-2" name="tab-btn" type="radio">
          <label for="tab-btn-2">Вкладка 2</label>
          <input id="tab-btn-3" name="tab-btn" type="radio">
          <label for="tab-btn-3">Вкладка 3</label>
        </div>
    
        <!-- Правая колонка с содержимым -->
        <div class="tab-content-container">
          <div class="tab-content" id="content-1">
            Содержимое 1...
          </div>
          <div class="tab-content" id="content-2">
            Содержимое 2...
          </div>
          <div class="tab-content" id="content-3">
            Содержимое 3...
          </div>
        </div>
      </div>
</Layout>
