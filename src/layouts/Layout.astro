---
import { SEO } from "astro-seo";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar/navbar.astro";
import Btn from "../components/btn.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL(
  "/images/same-day-appliance-repair-experts.webp",
  Astro.site,
).toString();

const { title, description } = Astro.props;

const defaultTitle =
  title ??
  "Same Day Appliance Repair in Los Angeles, Pasadena, Thousand Oaks & Irvine | (323) 870-4790";

const defaultDescription =
  description ??
  "Same Day Appliance Repair provides residential and commercial appliance repair services in Los Angeles, Pasadena, Thousand Oaks, Irvine and nearby cities.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- ЕДИНЫЙ SEO-блок, без дублей -->
    <SEO
      title={defaultTitle}
      description={defaultDescription}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          title: defaultTitle,
          type: "website",
          url: canonicalURL,
          image: resolvedImageWithDomain,
        },
        image: {
          url: resolvedImageWithDomain,
          alt: "Same Day Appliance Repair",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@web3templates",
        creator: "@surjithctly",
        image: {
          url: resolvedImageWithDomain,
          alt: "Same Day Appliance Repair",
        },
      }}
    />
    <style is:global>
      /* ВСЁ, ЧТО НИЖЕ — ПРОСТО ТВОЙ CSS 1:1 */

      /* фикс опечатки Im → !important */
      .H9lube img {
        width: 100% !important;
      }

      /* Improve Page speed */
      img {
        content-visibility: auto;
      }

      .formbutton {
        background-color: #c2250a !important;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p,
      a {
        color: #000;
      }

      /* объединённый h1 + animate-charcter (убраны дубли) */
      h1 {
        display: inline-block;
        font-size: clamp(35px, 7vw, 60px);
        line-height: clamp(46px, 8vh, 66px);
        font-weight: 600;
        margin: 20px auto;
        text-shadow: 2.3px 2.3px 3.7px rgb(21 21 21);
      }

      .animate-charcter {
        font-family: "Times New Roman", Times, serif;
        text-transform: uppercase;
        background-image: linear-gradient(
          -225deg,
          #fff 0%,
          #000 15%,
          #111112 67%,
          #858384 100%
        );
        background-size: 200% auto;
        color: #fff;
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: textclip 4s linear infinite;
        display: inline-block;
        font-size: clamp(35px, 7vw, 60px);
        line-height: clamp(46px, 8vh, 66px);
        font-weight: 900;
        text-shadow: 2.3px 2.3px 3.7px rgb(21 21 21);
      }

      @keyframes textclip {
        to {
          background-position: 200% center;
        }
      }

      .items-start {
        border: 1px solid;
        border-radius: 18px;
        padding: 10px;
      }

      .img-header {
        border-radius: 15px;
        margin: 15px 20px 20px 0;
      }

      .img {
        border-radius: 15px;
        margin: 15px auto 15px auto;
      }

      p {
        margin: 10px;
      }

      h2 {
        margin: 0;
        margin-top: 25px;
        font-weight: 800;
        font-size: clamp(24px, 5vw, 28px) !important;
        text-align: center;
        text-shadow: 1px 1px 1.3px #8f9499;
      }

      h3 {
        margin-top: 5px;
        font-weight: 800;
        font-size: 22px;
      }

      .anchor {
        color: #0f77cc;
        font-size: 22px;
      }

      .anchor:hover {
        text-decoration: underline;
      }

      @media (min-width: 950px) {
        .two-col-grid {
          display: inline-grid;
        }
        .col-one {
          grid-column: 1;
        }
        .col-two {
          grid-column: 2;
        }
      }

      .col-one {
        margin: 0 20px 15px 0;
      }

      .services {
        padding: 10px 0 10px 0;
      }

      main {
        display: grid;
        position: relative;
        width: 100%;
        max-width: 100%;
      }

      .page-header {
        position: relative;
        display: grid;
        justify-self: center;
        width: 100%;
        overflow: hidden;
        background: linear-gradient(
          90deg,
          rgba(255, 255, 255, 1) 42%,
          rgba(255, 255, 255, 0.7478641115) 63%,
          rgba(255, 255, 255, 0) 100%
        );
      }

      .page-header-d-full {
        width: 100%;
        max-width: 1920px;
        justify-self: center;
        height: 100%;
        padding: 2% 3% 1% 3%;
      }

      .page-header-d {
        left: 0;
        width: 80%;
        position: relative;
        align-self: center;
      }

      @media (min-width: 1440px) {
        .page-header-d {
          width: 50%;
        }

        .page-header-d-full {
          padding: 3% 3% 3% 3%;
        }
      }

      .page-header-f {
        position: absolute;
        width: 100%;
        z-index: -1;
        margin-left: 40%;
      }

      .page-header-f-rel {
        position: relative;
        display: grid;
      }

      .page-header-f-gradient {
        position: absolute;
        background: linear-gradient(
          0deg,
          rgba(255, 255, 255, 1) 53%,
          rgba(255, 255, 255, 0.8991) 68%,
          rgba(255, 255, 255, 0) 89%
        );
        margin-top: -15%;
        height: 33vh;
        width: 100vw;
      }

      .page-header-f img {
        max-width: 65%;
      }

      .page-header-p-full {
        max-width: 1920px;
        justify-self: center;
        padding: 0 3% 3% 3%;
        width: 100%;
        text-align: left;
      }

      .page-header-p {
        text-align: left;
        width: 100%;
      }

      .page-header-p p {
        color: #262626;
        font-weight: 400;
        font-size: clamp(16px, 3vw, 18px);
        max-width: 70%;
      }

      .page-header-p p:nth-child(2) {
        margin-top: 10px;
      }

      @media (max-width: 1220px) {
        .page-header-p p:nth-child(2) {
          max-width: 100%;
        }

        .oven-page-header-p-full .page-header-p p:nth-child(2) {
          max-width: 70%;
        }
      }

      @media (max-width: 1024px) {
        .page-header-p-full {
          padding: 0 3% 3% 3%;
        }

        .page-header-f {
          position: relative;
          width: auto;
          z-index: 2;
          margin-left: 0;
          justify-self: center;
          margin: 7px 5% 17px 5%;
        }

        .page-header-f img {
          justify-self: center;
          border-radius: 10px;
          box-shadow: 4px 4px 13px 0 rgba(0, 0, 0, 0.35);
        }

        .page-header-f-gradient {
          display: none;
        }

        .page-header-d-full {
          padding: 2% 2%;
        }

        .page-header-d {
          width: 100%;
        }

        .page-header-p p {
          max-width: 100%;
        }

        .oven-page-header-p-full .page-header-p p:nth-child(2) {
          max-width: 100%;
        }
      }

      @media (max-width: 768px) {
        .page-header-f img {
          max-width: 100%;
        }

        .page-header-d-full {
          padding: 1% 0;
        }

        .page-header-d {
          left: 0;
          width: 96% !important;
          position: relative;
          display: grid;
          align-self: center;
          margin: 0 2% 0 2%;
          text-align: center;
        }

        .page-header-d h1 {
          margin-bottom: 0;
        }

        .animate-charcter {
          white-space: wrap;
        }
      }

      .reviews {
        width: 100%;
        background-color: #000;
      }

      .reviews-header p {
        color: #fff;
        padding: 15px 10px 15px 10px;
        align-items: center;
        display: flex;
        margin: 0 !important;
        font-size: 17px;
      }

      .reviews-header {
        cursor: pointer;
        margin-top: -3px;
      }

      .reviews-content {
        max-width: 1920px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        cursor: default;
      }

      .reviews-header a {
        color: #fff;
        transition: 0.25s;
        height: 100%;
        align-content: center;
      }

      .reviews-header a:hover {
        color: #ca0913 !important;
      }

      .header-licenses-foto {
        display: flex;
        padding: 0 10px 0 0;
      }

      .header-licenses-foto a {
        display: flex;
      }

      .header-licenses-foto img {
        padding: 0 3px;
        margin: 13px 0px;
      }

      @media (max-width: 768px) {
        .reviews-content {
          display: grid;
        }

        .header-licenses-foto img {
          margin: 10px 3px;
        }

        .reviews-header p {
          padding: 10px 10px 5px 10px;
        }
      }

      ::-webkit-scrollbar {
        width: 10px;
        height: 8px;
        background-color: #000000;
      }

      ::-webkit-scrollbar-thumb {
        background: #ca0913;
        border-radius: 5px;
      }

      html {
        width: 100%;
        overflow-y: scroll;
        scroll-behavior: smooth;
      }

      body {
        width: 100%;
        margin: 0 auto;
        position: relative;
        top: 0;
        margin-top: 126px;
      }

      .max-w-screen-xl {
        width: 100%;
        max-width: 100%;
      }

      .inside-reviews_header-full {
        max-width: 1920px;
        width: 100%;
        transform: translate(-50%, 0%);
        left: 50%;
        position: relative;
        background-color: #000;
      }

      .header-full {
        width: 100%;
        height: auto;
        margin: 0 auto;
        padding: 10px 10px 10px 10px;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #000;
        z-index: 2000;
      }

      .inside_header-full {
        display: flex;
        justify-content: space-between;
      }

      .py-2 {
        padding-top: 0.4rem;
        padding-bottom: 0.4rem;
      }

      .relative span,
      .py-2 span {
        color: #fff;
      }

      .py-2:hover span {
        color: rgb(169 170 171);
      }

      .lg\:bg-white {
        background-color: rgb(0 0 0);
        white-space: nowrap;
        max-height: calc(100vh - 180px);
        overflow-x: hidden;
        overflow-y: auto;
      }

      /* оставляем только один вариант w-3: для размеров (цвет убран) */
      .w-3 {
        width: 15px;
        height: 20px;
      }

      .text-slate-800 {
        color: #f2f4f7;
      }

      .gap-1:hover span {
        color: rgb(169 170 171);
      }

      .gap-4 {
        color: #fff;
        justify-content: space-between;
      }

      .gap-4 a {
        background-color: #ca0913;
        text-align: center;
        width: 100%;
        white-space: nowrap;
        color: #fff;
        transition: 0.25s;
        text-shadow: 1.2px 1.2px 2px black;
        border-radius: 7px !important;
      }

      .gap-4 a:hover {
        color: rgb(0, 0, 0);
      }

      .header-bootun {
        display: flex;
        align-self: center;
        margin: 0 6px;
        grid-gap: 0.5em;
      }

      .hover\:bg-gray-200 {
        font-weight: 700 !important;
        transition: 0.25s;
      }

      .hover\:bg-gray-200:hover {
        background-color: #ca0913;
        box-shadow: inset 0px 4px 6px 1px rgb(0 0 0 / 25%),
          0px 6px 7px 0px rgb(0 0 0 / 11%),
          0px 3px 11px 4px rgb(0 0 0 / 25%) !important;
      }

      .text-gray-800 {
        color: #fff;
      }

      .text-gray-600 {
        color: rgb(254 254 255);
      }

      .hover\:text-gray-900:hover {
        color: rgb(169 170 171);
      }

      button.hcp-button {
        background-color: #ca0913 !important;
        overflow-x: hidden !important;
        max-width: 148px;
        width: 100%;
        font-weight: 700 !important;
        line-height: 1.14;
        padding: 10px 24px !important;
        box-shadow: none;
        border-radius: 7px !important;
        color: #fff;
        text-transform: uppercase;
        position: relative;
        border: 0;
        cursor: pointer;
        display: inline-flex;
        outline: 0;
        text-decoration: none;
        user-select: none;
        -webkit-appearance: none;
        -webkit-tap-highlight-color: transparent;
        text-indent: 0px;
        align-items: center;
        justify-content: center;
        text-shadow: 1.2px 1.2px 2px black !important;
        transition: 0.25s !important;
        white-space: nowrap !important;
      }

      button.hcp-button:hover {
        color: #000;
        box-shadow: inset 0px 4px 6px 1px rgb(0 0 0 / 25%),
          0px 6px 7px 0px rgb(0 0 0 / 11%),
          0px 3px 11px 4px rgb(0 0 0 / 25%) !important;
      }

      .call-header {
        width: 214px;
        height: 100%;
        display: contents;
        border-radius: 7px;
        transition: 0.25s !important;
      }

      .call-header a {
        width: 100%;
        display: grid;
        padding: 10px 4px;
        white-space: nowrap;
        font-weight: 700 !important;
        border-radius: 7px !important;
        color: #fff;
        text-shadow: 1.2px 1.2px 2px black !important;
        align-self: center;
      }

      .call-header a:hover {
        box-shadow: inset 0px 4px 6px 1px rgb(0 0 0 / 25%),
          0px 6px 7px 0px rgb(0 0 0 / 11%),
          0px 3px 11px 4px rgb(0 0 0 / 25%) !important;
      }

      .lg\:gap-3 {
        gap: 0.2rem;
        align-self: center;
      }

      .logo-header img {
        max-width: 244px;
        transition: 0.25s;
      }

      .w-full {
        width: auto;
        grid-gap: 0.4em;
      }

      #astronav-menu svg {
        width: 34px;
        height: 34px;
        color: #fff;
        transition: 0.2s ease-in-out;
      }

      #astronav-menu svg:hover {
        color: #ca0913;
      }

      .header-menu-content li {
        align-content: center;
      }

      .astronav-dropdown svg {
        width: 100%;
        min-width: 15px;
        max-width: 15px;
      }

      .header-bootun-1024 {
        display: none;
      }

      .call-header-1024 a {
        color: #fff;
        background-color: #ca0913;
        text-align: center;
        width: 100%;
        height: 100%;
        max-width: 400px;
        transition: 0.25s;
        border-radius: 7px;
        padding: 10px 10px;
        font-size: 18px;
        font-weight: 700 !important;
        text-shadow: 1.2px 1.2px 2px black !important;
      }

      .header-bootun-1024:hover a {
        color: #000;
        box-shadow: inset 0px 4px 6px 1px rgb(0 0 0 / 25%),
          0px 6px 7px 0px rgb(0 0 0 / 11%),
          0px 3px 11px 4px rgb(0 0 0 / 25%) !important;
      }

      @media (max-width: 1440px) {
        .header-bootun {
          display: grid;
        }
      }

      @media (max-width: 1180px) {
        body {
          margin-top: 112px;
        }

        .logo-header img {
          max-width: 214px;
        }

        .w-full {
          grid-gap: 0.2em;
        }

        .call-header a {
          font-size: 14px;
        }

        button.hcp-button {
          padding: 10px 10px !important;
          font-size: 15px;
        }
      }

      @media (max-width: 1024px) {
        .w-full::-webkit-scrollbar-thumb {
          background: #000000;
        }

        .w-full {
          grid-gap: 0.2em;
          max-height: calc(100vh - 86px);
          overflow-x: hidden;
          overflow-y: auto;
        }

        .block {
          display: flex;
        }

        .header-bootun-1024 {
          display: flex;
          align-self: center;
        }

        .mt-3 {
          margin: 10px 0;
        }

        body {
          margin-top: 84px;
        }

        .logo-header img {
          max-width: 150px;
        }

        button.hcp-button {
          margin: 0 !important;
        }
      }

      @media (max-width: 1023px) {
        .inside_header-full {
          display: block;
        }
      }

      @media (hover: none) {
        svg:hover {
          color: initial;
          background-color: initial;
          fill: initial;
        }
      }

      @media (max-width: 768px) {
        h1 {
          font-size: clamp(35px, 6vw, 60px) !important;
          line-height: clamp(46px, 6vh, 60px) !important;
        }

        .animate-charcter {
          font-size: clamp(35px, 6vw, 60px) !important;
          line-height: clamp(46px, 6vh, 60px) !important;
        }

        #astronav-menu svg:hover {
          pointer-events: none;
        }
      }

      @media (max-width: 400px) {
        .call-header-1024 a {
          width: 100%;
          max-width: 300px;
          white-space: wrap;
          padding: 2% 2%;
          font-size: 16px;
          justify-self: center;
          display: grid;
        }

        .hover\:bg-gray-200 {
          padding: 9px 4px !important;
          width: 216px !important;
        }

        .gap-4 {
          gap: 0.6rem;
        }

        .gap-4 button {
          max-width: 75px !important;
          padding: 12px 17px !important;
          justify-content: center !important;
        }

        .lg\:bg-white {
          white-space: wrap;
        }
      }

      .black-list li a {
        color: #000;
      }

      /* New Image Style */
      .image-text-container {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 5%;
      }

      .image-wrapper {
        float: left;
        width: 40%;
        max-width: 500px;
        margin-right: 20px;
      }

      .image-wrapper img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      }

      .image-wrapper img:hover {
        transform: translateY(-5px);
        box-shadow: 0px 3px 5px 2px rgb(0 0 0 / 20%),
          3px 2px 3px 0px rgb(0 0 0 / 14%),
          3px 3px 14px 0px rgb(0 0 0 / 12%);
        border-radius: 10px;
      }

      .image-wrapper figcaption {
        font-size: 16px;
        color: #555;
        font-style: italic;
        text-align: center;
        margin-top: 5px;
      }

      .text-content {
        overflow: hidden;
      }

      @media (max-width: 768px) {
        .image-wrapper {
          float: none;
          width: 100%;
          max-width: 100%;
          margin-right: 0;
          text-align: center;
        }

        .image-wrapper img {
          display: block;
          margin: 0 auto;
          max-width: 300px;
        }

        .text-content {
          text-align: center;
        }
      }
    </style>
  </head>

  <body>
    <slot />
  </body>
</html>
